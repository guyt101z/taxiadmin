{% extends "TaxiAdminSitioBundle::modal.html.twig" %}

{% block contenido %}
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">Ingresar Mantenimiento</h4>
</div>

<div class="modal-body">
  {{ form_start(form) }}
  <div class="form-group">
    {{ form_widget(form.movil, { 'attr' : { 'class' : 'form-control' } }) }}
    <span class="help-button"> 
      <i class="help-tooltip glyphicon glyphicon-question-sign" data-placement="left" data-toggle="tooltip" title="Ingrese el MÃ³vil"></i>
    </span>
  </div>

  <div class="form-group">
    <div class="input-group with-help">
      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      {{ form_widget(form.fechaIngreso) }}
    </div>
    <span class="help-button"> 
      <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de INGRESO al mantenimiento "></i>
    </span>
  </div>
  <div class="form-group">
    {{ form_widget(form.motivoIngreso) }}
  </div>
  <div class="form-group">
    {{ form_widget(form.taller) }}
  </div>
  <div class="form-group">
    {{ form_widget(form.descripcionTrabajo) }}
  </div>
  <div class="form-group">
    <div class="input-group with-help">
      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      {{ form_widget(form.fechaFinalizado) }}
    </div>
    <span class="help-button"> 
      <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de FINALIZADO el mantenimiento"></i>
    </span>
  </div>
  <div class="form-group">
    <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
      {{ form_widget(form.costo) }}
    </div>
  </div>
  <div class="form-group">
    <div class="input-group with-help">
      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      {{ form_widget(form.fechaVencimiento) }}
    </div>
    <span class="help-button"> 
      <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de VENCIMIENTO para el pago del trabajo"></i>
    </span>
  </div>
  <div class="form-group">
    <div class="input-group with-help">
      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
      {{ form_widget(form.fechaPago) }}
    </div>
    <span class="help-button"> 
      <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de PAGO en caso de realizado."></i>
    </span>
  </div>

  {{ form_widget(form._token) }}

  <div class="form-group">
    <div class="col-sm-offset-2 ">
      {{ form_widget(form.submit) }}
    </div>
  </div>

  {{ form_end(form) }}    
</div>

{% endblock %}