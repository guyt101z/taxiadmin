{% extends "TaxiAdminSitioBundle::layout.html.twig" %}

{% block contenido %}

<div class="row">
    <div class="col-md-3 ">

        <div class="list-group">
            <a href="#" class="list-group-item" data-toggle="modal" data-target="#nuevoMovil">Nuevo Móvil</a>
            <a href="#" class="list-group-item">Imprimir listado</a>
        </div>

    </div>
    <div class="col-xs-13 col-md-9">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Moviles</h3>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>{{ knp_pagination_sortable(pagination, 'Matrícula', 'm.matricula') }}</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Combustible</th>
                                <th>{{ knp_pagination_sortable(pagination, 'Num. Móvil', 'm.numMovil') }}</th>
                                <th>{{ knp_pagination_sortable(pagination, 'Despacho', 'm.despacho') }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in pagination %}
                            <tr>
                                <td>{{ entity.matricula }}</td>
                                <td>{{ entity.marca }}</td>
                                <td>{{ entity.modelo }}</td>
                                <td>{{ combustible[entity.combustible] }}</td>
                                <td>{{ entity.numMovil }}</td>
                                <td>{{ entity.despacho }}</td>
                                <td>
                                    <a href="{{ path('movil_show', { 'matricula': entity.matricula }) }}">
                                        <i class="glyphicon glyphicon-eye-open help-tooltip" data-placement="left" data-toggle="tooltip" title="Ver Detalles"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="paginacion">
                    {{ knp_pagination_render(pagination) }}
                </div>

            </div>
        </div>
    </div>
</div>


<!-- NUEVA -->
<div class="modal fade" id="nuevoMovil" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Nuevo Móvil</h4>
            </div>

            <div class="modal-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.matricula) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.marca) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.modelo) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.anio) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.numChasis) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.combustible, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.numMovil) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.despacho) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.radio, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.empresa, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>

                {{ form_widget(form._token) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 ">
                        <button type="submit" class="btn btn-default">Crear</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>
<!-- NUEVA -->

{% endblock %}