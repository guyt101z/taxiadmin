<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Agregar Chofer</h4>
        </div>

        <div class="modal-body">
            <form action="{{ path('empresa_add_chofer') }}" method="post" role="form">
            <input type="hidden" name="razonSocial" value="{{ razonSocial }}">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th style="width:40px;">Seleccionar</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for chofer in choferes %}
                        <tr>
                            <td>{{ chofer.nombre }}</td>
                            <td>{{ chofer.apellido }}</td>
                            <td style="text-align: center;"><input type="checkbox" name="choferes[]" value="{{ chofer.id }}" ></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-sm-offset-2 ">
                        <button type="submit" class="btn btn-default">Agregar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>