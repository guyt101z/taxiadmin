<!-- GASTO EMPRESA -->
<div class="modal fade" id="gastoEmpresa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">Ingresar nuevo Gasto</h4>
			</div>

			<div class="modal-body">
				<form action="#" role="form">
					<div class="form-group">
						<select class="form-control" required autofocus>
							<option>Empresa 1</option>
							<option>Empresa 2</option>
							<option>Empresa 3</option>
						</select>
					</div>
					<div class="form-group">
						
						<div class="input-group with-help">
							<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
							<input type="date" class="form-control" id="inputGastoEmpresaFecha" placeholder="Fecha" required>
						</div>
						<span class="help-button"> 
							<i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de realizado el gasto"></i>
						</span>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" id="inputGastoEmpresaRubro" placeholder="Rubro" required>
					</div>
					<div class="form-group">
						<div class="input-group">
							<span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
							<input type="number" class="form-control" id="inputGastoEmpresaMonto" placeholder="Monto" required>
						</div>
					</div>
					<div class="form-group">
						<textarea class="form-control" rows="3" id="inputGastoEmpresaDetalle" placeholder="Detalle" required></textarea>
					</div>
					<div class="form-group">
						<div class="col-sm-offset-2 ">
							<button type="submit" class="btn btn-default">Guardar</button>
						</div>
					</div>
				</form>
			</div>

		</div>
	</div>
</div>
<!-- GASTO EMPRESA -->

<!-- GASTO MOVIL -->
