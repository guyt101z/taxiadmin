	{% block modal %}
	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">

				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title" id="myModalLabel">Estás a un paso de usar TaxiAdmin</h4>
				</div>

				<div class="modal-body">
					<form class="form-horizontal form-style" action="{{ path("usuario_create") }}" method="post" role="form">

						<div class="form-group">
							{{ form_widget(formUsuario.nombre) }}
						</div>
						<div class="form-group">
							{{ form_widget(formUsuario.apellido )}}
						</div>
						<div class="form-group">
							{{ form_widget(formUsuario.email )}}
						</div>
						<div class="form-group">
							{{ form_widget(formUsuario.password )}}
						</div>
						<div class="form-group">
							{{ form_widget(formUsuario.telefono )}}
						</div>
						<div class="form-group">
							{{ form_widget(formUsuario.celular )}}
						</div>
						<div class="form-group">
							{{ form_widget(formUsuario.direccion )}}
						</div>

						{{ form_widget(formUsuario._token) }}
						
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-default">Enviar</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	{% endblock %}