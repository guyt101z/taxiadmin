{% extends "TaxiAdminSitioBundle::modal.html.twig" %}

{% block contenido %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Ingresar pago de adelanto</h4>
</div>

<div class="modal-body">
    {{ form_start(form) }}

    <div class="input-group form-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
        {{ form_widget(form.fecha) }}

        <span class="input-group-addon help"> 
            <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha del Pago"></i>
        </span>
    </div>

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
            {{ form_widget(form.monto) }}
        </div>
    </div>

    {{ form_widget(form._token) }}

    <div class="form-group">
        <div class="col-sm-offset-2 ">
            <button type="submit" class="btn btn-default">Crear</button>
        </div>
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}