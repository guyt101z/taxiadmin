{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Chofer list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>Celular</th>
                <th>Direccion</th>
                <th>Habilitado</th>
                <th>Fechaalta</th>
                <th>Fechabaja</th>
                <th>Idusuario</th>
                <th>Aporteleyes</th>
                <th>Porcentajeliquidacion</th>
                <th>Venccarnesalud</th>
                <th>Venclibretaconducir</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('chofer_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellido }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.celular }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.habilitado }}</td>
                <td>{% if entity.fechaAlta %}{{ entity.fechaAlta|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechaBaja %}{{ entity.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.idUsuario }}</td>
                <td>{{ entity.aporteLeyes }}</td>
                <td>{{ entity.porcentajeLiquidacion }}</td>
                <td>{% if entity.vencCarneSalud %}{{ entity.vencCarneSalud|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.vencLibretaConducir %}{{ entity.vencLibretaConducir|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.email }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('chofer_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chofer_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('chofer_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
