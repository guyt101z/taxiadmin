{% extends "TaxiAdminSitioBundle::modal.html.twig" %}
{% block contenido %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Agregar Pago Gasto</h4>
</div>
<div class="modal-body">
    {{ form_start(form) }}

    <div class="form-group">
        <label>Fecha de Pago</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            {{ form_widget(form.fechaPago) }}
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de PAGO"></i>
            </span>
        </div>
    </div>

    <div class="form-group">
        <label>Monto</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
            {{ form_widget(form.costo) }}
        </div>
    </div>

    
    <div class="form-group">
        <label>Descripci√≥n</label>
        {{ form_widget(form.descripcion) }}
    </div>

    {{ form_widget(form._token) }}

    <div class="form-group">
        <div class="col-sm-offset-2 ">
            {{ form_widget(form.submit) }}
        </div>
    </div>
</div>
{% endblock %}