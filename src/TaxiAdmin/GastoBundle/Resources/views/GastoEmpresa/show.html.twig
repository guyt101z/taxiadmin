<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Detalles del Gasto</h4>
        </div>
        <div class="modal-body">
            <div class="col-xs-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th width="150px">Empresa</th>
                                <td>{{ entity.empresa }}</td>
                            </tr>
                            <tr>
                                <th>Costo</th>
                                <td>{{ entity.costo }}</td>
                            </tr>
                            <tr>
                                <th>Rubro</th>
                                <td>{{ entity.rubro }}</td>
                            </tr>
                            <tr>
                                <th>Descripción</th>
                                <td>{{ entity.descripcion }}</td>
                            </tr>
                            <tr>
                                <th>Fecha de Pago</th>
                                {% if entity.fechaPago != null %}
                                <td>{{ entity.fechaPago|date("d/m/Y") }}</td>
                                {% else %}
                                <td></td>
                                {% endif %}
                            </tr>
                            <tr>
                                <th>Día de Vencimiento</th>
                                <td>
                                    {% if entity.diaVencimiento != null %}
                                    El {{ entity.diaVencimiento }} de cada mes
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            {% if entity.diaVencimiento != null %}
            {% if pagos|length > 0 %}
            <div class="col-xs-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Fecha de Pago</th>
                            <th>Costo</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pago in pagos %}
                        <tr>
                            <td>{{ pago.fechaPago|date("d/m/Y") }}</td>
                            <td>{{ pago.costo }}</td>
                            <td>{{ pago.descripcion }}</td>
                            <td>
                            <a href="{{ path('gastoempresa_removepago', { 'idpago': pago.id, 'id': entity.id }) }}" onclick="return confirm('¿Estas seguro?');">
                                    <i class="glyphicon glyphicon-remove help-tooltip" data-placement="left" data-toggle="tooltip" title="Eliminar Pago"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <p>El gasto aún no tiene pagos.</p>
                {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
</div>