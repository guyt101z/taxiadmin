{% extends "TaxiAdminSitioBundle::modal.html.twig" %}
{% block contenido %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Ingresar Gasto</h4>
</div>
<div class="modal-body">
    {{ form_start(form) }}
    
    <div class="form-group">
        {{ form_widget(form.empresa, { 'attr' : { 'class' : 'form-control' } }) }}
    </div>
    
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
            {{ form_widget(form.costo) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_widget(form.rubro) }}
    </div>
    
    <div class="form-group">
        {{ form_widget(form.descripcion) }}
    </div>

    {% if not diaVencimiento > 0 %}
    <div>
        <label>En caso que ya se haya pago, ingrese la fecha</label>
        <div class="form-group">
            <div class="input-group with-help">
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                {{ form_widget(form.fechaPago) }}
            </div>
            <span class="help-button">
                <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de PAGO del gasto"></i>
            </span>
        </div>
    </div>
    {% endif %}


    
    <div class="form-group">
        <label>En caso de que sea un gasto mensual ingrese la fecha de vencimiento.</label>
        {{ form_widget(form.diaVencimiento) }}
    </div>

    {{ form_widget(form._token) }}
    
    <div class="form-group">
        <div class="col-sm-offset-2 ">
            {{ form_widget(form.submit) }}
        </div>
    </div>
    {# {{ form_end(form) }} #}
</div>
{% endblock %}