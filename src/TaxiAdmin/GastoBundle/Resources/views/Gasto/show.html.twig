{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Gasto</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ entity.costo }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Fechavencimiento</th>
                <td>{{ entity.fechaVencimiento|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Mensual</th>
                <td>{{ entity.mensual }}</td>
            </tr>
            <tr>
                <th>Diavencimiento</th>
                <td>{{ entity.diaVencimiento }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gasto') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gasto_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
