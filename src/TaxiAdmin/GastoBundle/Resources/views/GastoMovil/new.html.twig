{% extends "TaxiAdminSitioBundle::modal.html.twig" %}
{% block contenido %}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    {% if form.vars.value.id > 0 %}
        <h4 class="modal-title" id="myModalLabel">Modificar Gasto</h4>
    {% else %}
        <h4 class="modal-title" id="myModalLabel">Ingresar Gasto</h4>
    {% endif %}
</div>
<div class="modal-body">
    {{ form_start(form) }}

    {% if not isMensual %}
    <div class="form-group">
        <label>Monto</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-usd"></i></span>
            {{ form_widget(form.costo) }}
        </div>
    </div>
    {% endif %}

    <div class="form-group">
        <label>Rubro</label>
        {{ form_widget(form.rubro) }}
    </div>
    
    <div class="form-group">
        <label>Descripción</label>
        {{ form_widget(form.descripcion) }}
    </div>

    {% if not isMensual %}

    <div class="form-group">
    <label>Fecha de Pago (en caso de que ya este pago)</label>
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
            {{ form_widget(form.fechaPago) }}
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-question-sign help-tooltip" data-placement="left" data-toggle="tooltip" title="Ingrese la fecha de PAGO del gasto"></i>
            </span>
        </div>
    </div>
    {% endif %}
    
    {% if isMensual %}
    <label>Ingrese el dia de Vencimiento del gasto</label>
    <div class="form-group">
        <label>Día de Vencimiento</label>
        {{ form_widget(form.diaVencimiento) }}
    </div>
    {% endif %}

    {{ form_widget(form._token) }}
    <div class="form-group">
        <div class="col-sm-offset-2 ">
            {{ form_widget(form.submit) }}
        </div>
    </div>
</div>
{% endblock %}