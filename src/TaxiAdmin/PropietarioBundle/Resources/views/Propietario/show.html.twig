{% extends "TaxiAdminSitioBundle::layout.html.twig" %}

{% block contenido %}

<div class="row">

    <div class="col-md-3 ">
        <div class="list-group">
            <a href="#" class="list-group-item" data-toggle="modal" data-target="#editarPropietario">Modificar Propietario</a>
            <a href="#" class="list-group-item">Imprimir Información</a>
        </div>
    </div>

    <div class="col-xs-12 col-md-9">

        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Información</h3>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <tbody>
                            <tr>
                                <th>Nombre</th>
                                <td>{{ entity.nombre }}</td>
                            </tr>
                            <tr>
                                <th>Apellido</th>
                                <td>{{ entity.apellido }}</td>
                            </tr>
                            <tr>
                                <th>Teléfono</th>
                                <td>{{ entity.telefono }}</td>
                            </tr>
                            <tr>
                                <th>Celular</th>
                                <td>{{ entity.celular }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ entity.email }}</td>
                            </tr>
                            <tr>
                                <th>Dirección</th>
                                <td>{{ entity.direccion }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Empresas</h3>

                <div class="table-responsive">
                   <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Razón Social</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for empresa in empresas %}
                        <tr>
                            <td>{{ empresa.nombre }}</td>
                            <td>{{ empresa.razonSocial }}</td>
                            <td style="text-align:right;">
                                <a href="{{ path('empresa_show', { 'razonSocial': empresa.razonSocial }) }}">
                                    <i class="glyphicon glyphicon-eye-open help-tooltip" data-placement="left" data-toggle="tooltip" title="Ver Empresa"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <ul class="pagination pagination-sm">
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>

        </div>
    </div>

</div>

</div>


<!-- MODIFICAR -->
<div class="modal fade" id="editarPropietario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Nuevo Propietario</h4>
            </div>

            <div class="modal-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.nombre) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.apellido) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.telefono) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.celular) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.direccion) }}
                </div>

                {{ form_widget(form._token) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 ">
                        <button type="submit" class="btn btn-default">Guardar</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>
<!-- MODIFICAR -->

{% endblock %}