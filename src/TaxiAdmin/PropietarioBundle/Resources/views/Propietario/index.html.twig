{% extends "TaxiAdminSitioBundle::layout.html.twig" %}

{% block contenido %}

<div class="row">
    <div class="col-md-3 ">

        <div class="list-group">
            <a href="#" class="list-group-item" data-toggle="modal" data-target="#nuevoPropietario">Nuevo Propietario</a>
            <a href="#" class="list-group-item">Imprimir listado</a>
        </div>

    </div>
    <div class="col-xs-13 col-md-9">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Propietarios</h3>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>{{ knp_pagination_sortable(pagination, 'Nombre', 'p.nombre') }}</th>
                                <th>{{ knp_pagination_sortable(pagination, 'Apellido', 'p.apellido') }}</th>
                                <th>Celular</th>
                                <th>Email</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in pagination %}
                            <tr>
                                <td>{{ entity.nombre }}</td>
                                <td>{{ entity.apellido }}</td>
                                <td>{{ entity.celular }}</td>
                                <td>{{ entity.email }}</td>
                                <td>
                                    <a href="{{ path('propietario_show', { 'nombre': entity.nombre, 'apellido': entity.apellido }) }}">
                                        <i class="glyphicon glyphicon-eye-open help-tooltip" data-placement="left" data-toggle="tooltip" title="Ver Detalles"></i>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="paginacion">
                    {{ knp_pagination_render(pagination) }}
                </div>

            </div>
        </div>
    </div>
</div>


<!-- NUEVA -->
<div class="modal fade" id="nuevoPropietario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Nuevo Propietario</h4>
            </div>

            <div class="modal-body">
                {{ form_start(form) }}
                
                <div class="form-group">
                    <label>Nombre</label>
                    {{ form_widget(form.nombre) }}
                </div>
                <div class="form-group">
                    <label>Apellido</label>
                    {{ form_widget(form.apellido) }}
                </div>
                <div class="form-group">
                    <label>Email</label>
                    {{ form_widget(form.email) }}
                </div>
                <div class="form-group">
                    <label>Teléfono</label>
                    {{ form_widget(form.telefono) }}
                </div>
                <div class="form-group">
                    <label>Celular</label>
                    {{ form_widget(form.celular) }}
                </div>
                <div class="form-group">
                    <label>Dirección</label>
                    {{ form_widget(form.direccion) }}
                </div>
                
                {{ form_widget(form._token) }}

                <div class="form-group">
                    <div class="col-sm-offset-2 ">
                        <button type="submit" class="btn btn-default">Crear</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
</div>
<!-- NUEVA -->

{% endblock %}